<div class="container mt-5">
  <div class="card shadow-lg rounded-4 border-0">
    <div class="card-body p-5">
      <h2 class="mb-4 text-center">Purchase Plan Request</h2>

<!--      <h5 class="mb-3 text-muted">Selected Plan: <strong><%#= @subscription_plan.name %></strong></h5>-->

      <%= form_with model: @plan_purchase_request, local: true do |f| %>
        <div class="row g-3">
          <div class="col-md-12">
            <%= f.label :subscription_plan_id, "Select a Plan", class: "form-label" %>
            <%= f.select :subscription_plan_id,
                         options_from_collection_for_select(@subscription_plans, :id, :name, @plan_purchase_request.subscription_plan_id),
                         { prompt: "Choose a plan" },
                         class: "form-select", required: true %>
          </div>


          <div class="col-md-6">
            <%= f.label :first_name, class: "form-label" %>*
            <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name", required: true %>
          </div>

          <div class="col-md-6">
            <%= f.label :last_name, class: "form-label" %>*
            <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name", required: true %>
          </div>

          <div class="col-md-6">
            <%= f.label :company, class: "form-label" %>
            <%= f.text_field :company, class: "form-control", placeholder: "Company (optional)" %>
          </div>

          <div class="col-md-6">
            <%= f.label :function, class: "form-label" %>
            <%= f.text_field :function, class: "form-control", placeholder: "Your role or job title" %>
          </div>

          <div class="col-md-6">
            <%= f.label :email, class: "form-label" %>*
            <%= f.email_field :email, class: "form-control", placeholder: "you@example.com", required: true %>
          </div>

          <div class="col-md-6">
            <%= f.label :country, class: "form-label" %>*
            <%= f.text_field :country, class: "form-control", placeholder: "Country", required: true %>
          </div>

          <div class="col-md-6">
            <%= f.label :state, class: "form-label" %>*
            <%= f.text_field :state, class: "form-control", placeholder: "State", required: true %>
          </div>

          <div class="col-12 mt-3">
            <div class="form-check">
              <%= f.check_box :agreed_to_terms, class: "form-check-input", required: true %>
              <%= f.label :agreed_to_terms, "I agree to the Terms and Conditions", class: "form-check-label" %>
            </div>
          </div>

          <div class="col-12 mt-4 text-center">
            <%= f.submit "Submit Request", class: "btn btn-primary px-5 py-2 rounded-pill fw-bold" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
