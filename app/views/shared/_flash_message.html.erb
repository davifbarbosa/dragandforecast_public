<!-- âœ… Flash messages displayed FULL WIDTH below header -->

<% if flash.present? %>
  <div class="flash-wrapper mt-5 pt-5">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= bootstrap_alert_class(type) %> alert-dismissible fade show text-center rounded-0 m-0" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>
<% end %>