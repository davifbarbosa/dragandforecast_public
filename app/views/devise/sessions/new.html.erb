<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow p-4" style="min-width: 320px; max-width: 400px; width: 100%;">
    <h3 class="text-center mb-4">Login</h3>

    <%= form_with scope: :user, url: user_session_path, local: true, class: "needs-validation" do |form| %>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
      </div>

      <div class="mb-3 form-check">
        <%= form.check_box :remember_me, class: "form-check-input" %>
        <%= form.label :remember_me, class: "form-check-label" %>
      </div>

      <%= form.submit "Log in", class: "btn btn-primary w-100" %>

    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Forgot your password?", new_user_password_path, class: "small text-decoration-none" %><br>
      <%= link_to "Sign up", new_user_registration_path, class: "small text-decoration-none" %>
    </div>
  </div>
</div>
